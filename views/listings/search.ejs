
<% layout("/layouts/boilerplate") %>

<body>    
     </div>
        <div class="container">
            <% if (listing && listing.length) {%>
                <h2>Search Result for <%=title%></h2>
                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
                    <% for(let place of listing){ %>
                        <a href="/listings/<%=place._id%>" class="listing-link">
                            <div class="card listing-card col">
                                <img src="<%=place.image.url%>" class="card-img-top" style="height: 20rem;" alt="Listin_Image">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b><%=place.title %></b>
                                        <br>
                                        &#8377;
                                        <%=place.price.toLocaleString("en-IN")%>/night
                                        &nbsp;
                                        &nbsp;
                                        <i class="tax-info">+28%gst</i>
                                    </p>
                                </div>
                            </div>
                        </a>
                    
                <% } %>
                <% }else { %>
                    <h2>Sorry but there is no listing with title name : <%=title%> </h2>
                 
                <%}%>
            </div>
           
    </div>
    
</body>
